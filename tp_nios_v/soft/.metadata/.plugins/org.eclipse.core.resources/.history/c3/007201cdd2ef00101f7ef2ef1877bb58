#include <unistd.h>                 // usleep
#include "system.h"                 // PIO_0_BASE
#include "altera_avalon_pio_regs.h" // IOWR_ALTERA_AVALON_PIO_DATA

int main(void)
{
    unsigned int v = 1;

    while (1)
    {
        IOWR_ALTERA_AVALON_PIO_DATA(PIO_0_BASE, v);
        usleep(200000);

        v <<= 1;
        if (v > (1u << 9)) // 10 LEDs: bits 0..9
            v = 1;
    }

    return 0;
}
